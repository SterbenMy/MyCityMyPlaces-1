@using System.Security.Principal
@using Microsoft.Identity.Web

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <span class="navbar-text text-light">Hello @User.Identity.Name!</span>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">My account</a>
        <div class="dropdown-menu" aria-labelledby="dropdown01">
            <a class="dropdown-item text-dark" asp-area="" asp-controller="Family" asp-action="Family">Family</a>
            <a class="dropdown-item text-dark" asp-area="" asp-controller="Locations" asp-action="Locations">Favourite locations</a>
            <a class="dropdown-item text-dark" asp-area="" asp-controller="Statistics" asp-action="Statistics">Statistics</a>
            <a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <a class="dropdown-item text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </div>
    </li>

}
else
{
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
}
</ul>
